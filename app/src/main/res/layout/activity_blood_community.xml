<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagebkg2"

    tools:context=".BloodCommunity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/andika_new_basic"
            android:text="My Blood Community"
            android:textAlignment="center"
            android:textSize="33sp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/community_blood_group"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="65dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:paddingVertical="3dp"

            android:background="@drawable/edit_text_border"

            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/andika_new_basic"

            android:inputType="textPersonName"
            android:hint="Enter blood group" />

        <EditText
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/andika_new_basic"
            android:layout_marginHorizontal="65dp"
            android:paddingVertical="4dp"
            android:hint="Enter Email"
            android:textAlignment="center"

            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/join_community"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/andika_new_basic"
            android:layout_marginHorizontal="65dp"
            android:paddingVertical="4dp"
            android:textStyle="bold"
            android:textSize="17sp"

            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Join Community" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>