<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pagebkg2"

    android:layout_height="match_parent"
    tools:context=".SendMail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <TextView
            android:id="@+id/textView24"
            android:fontFamily="@font/andika_new_basic"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Emergency" />

        <EditText
            android:id="@+id/enter_blood_group"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="55dp"
            android:hint="Enter Blood Group"
            android:textAlignment="center"
            android:background="@drawable/edit_text_border"

            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText

            android:id="@+id/subject_area"
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="5dp"
            android:hint="Subject"
            android:textAlignment="center"
            android:background="@drawable/edit_text_border"

            android:ems="10"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/message_area"
            android:textAlignment="center"

            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"

            android:hint="Write Message here...."
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button_send_mail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/andika_new_basic"
            android:textSize="17sp"
            android:textStyle="bold"


            android:text="Send Mail" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>